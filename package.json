{
  "name": "pixi-react-hooks",
  "version": "0.0.2",
  "description": "@pixi/react hooks library",
  "author": "Justin Walsh",
  "keywords": [
    "pixi",
    "react",
    "hooks"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thejustinwalsh/pixi-react-hooks.git"
  },
  "bugs": {
    "url": "https://github.com/thejustinwalsh/pixi-react-hooks/issues"
  },
  "homepage": "https://github.com/thejustinwalsh/pixi-react-hooks#readme",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./suspense": {
      "import": {
        "types": "./dist/suspense/index.d.ts",
        "default": "./dist/suspense/index.js"
      },
      "require": {
        "types": "./dist/suspense/index.d.ts",
        "default": "./dist/suspense/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "pixi.js": "^8.7.3",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.2.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@types/react": "^19.0.8",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.0.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5",
    "react-error-boundary": "^4.0.12",
    "pixi.js": "^8.7.3"
  }
}
